{
  "name": "memory-atlas",
  "private": true,
  "version": "1.0.0",
  "description": "Map-based memory journal â€” pin moments to places, organize in groups, explore on a timeline.",
  "author": "",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:pages": "npm run build && node scripts/copy-to-docs.cjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_DEV=1 electron .\"",
    "electron:build": "tsc -b && cross-env ELECTRON=1 vite build && electron-builder"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "emoji-picker-react": "^4.18.0",
    "leaflet": "^1.9.4",
    "leaflet.heat": "^0.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-leaflet": "^5.0.0",
    "react-leaflet-cluster": "^4.0.0",
    "react-markdown": "^10.1.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/leaflet": "^1.9.21",
    "@types/leaflet.heat": "^0.2.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "cross-env": "^7.0.3",
    "rcedit": "^5.0.2"
  },
  "build": {
    "appId": "com.memoryatlas.app",
    "productName": "Memory Atlas",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "win": {
      "signAndEditExecutable": false,
      "target": ["nsis", "portable"]
    },
    "afterPack": "scripts/electron-afterPack.cjs"
  }
}
